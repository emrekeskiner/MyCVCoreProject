@model MyCVCore.PresentationLayer.Areas.Writer.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
@await Html.PartialAsync("/Areas/Writer/Views/Default/_HeadPartial.cshtml")

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/Template/skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4>Bir hesabınız yok mu ?</h4>
                            <h6 class="font-weight-light">Hemen bir kayıt oluşturun.</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label>Adınız</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" asp-for="Name"  class="form-control"/>
                                </div>
                                <div class="form-group">
                                    <label>Soyadınız</label>
                                    <span asp-validation-for="SurName" class="text-danger"></span>
                                    <input type="text" asp-for="SurName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Kullanıcı Adı</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    <input type="text" asp-for="UserName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Şifre</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="text" asp-for="Password" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Şifre Kontrol</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="text" asp-for="ConfirmPassword" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>E-Mail Adresiniz</label>
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                                    <input type="text" asp-for="Mail" class="form-control" />
                                </div>
                               <div class="text-danger" asp-validation-summary="ModelOnly">

                               </div>
                                <div class="mt-3">
                                    <button class="btn btn-primary" >Kayı Ol</button>
                                    @* <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Kayıt ol</a> *@
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Kullanıcı Adınız var mı ? <a href="/Login/UserLogin/" class="text-primary">Giriş Yapın</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    @await Html.PartialAsync("/Areas/Writer/Views/Default/_ScriptPartial.cshtml")
    <!-- endinject Paswd Ee5250! -->
</body>

</html>