@model WriterMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detay</h4>
            <p class="card-description">

            </p>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <tbody>

                        <tr><td><b>Gönderen : </b>@Model.Sender</td></tr>
                        <tr><td><b>Gönderen Adı : </b>@Model.SenderName</td></tr>
                        <tr><td><b>Alıcı: </b>@Model.Receiver</td></tr>
                        <tr><td><b>Alıcı Adı : </b>@Model.ReceiverName</td></tr>
                        <tr><td><b>Tarih : </b>@(((DateTime)@Model.Date).ToString("dd.MM.yyyy"))</td></tr>
                        <tr><td><b>Başlık : </b>@Model.Subject</td></tr>
                        <tr><td><b>Mesaj : </b>@Model.MessageContent</td></tr>
                        <tr><td></td></tr>

                </table>
            </div>
        </div>
    </div>
</div>

