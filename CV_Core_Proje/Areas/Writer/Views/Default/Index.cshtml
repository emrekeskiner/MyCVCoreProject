@model List<MyCVCore.EntityLayer.Concrete.Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <p class="card-description">
                
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>İçerik</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                           //swich case ile statusu renklendir.
                             <tr>
                            <th>@item.AnnouncementId</th>
                            <td>@item.Title</td>
                                <td>@(((DateTime)item.Date).ToString("dd.MM.yyyy"))</td>
                            <td><label class="badge badge-danger">@item.Status</label></td>
                            <td>@item.Content</td>
                                <td><a href="/Writer/Default/AnnouncementDetails/@item.AnnouncementId" class="btn btn-outline-primary">Detaylar</a> </td>
                        </tr>
                        }
                       
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

