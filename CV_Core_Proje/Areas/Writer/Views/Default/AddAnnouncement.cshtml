@model Announcement
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Duyuru Ekle</h4>

        <form class="forms-sample" method="post">
            <div class="form-group">
                <label>Konu</label>
                <input type="text" class="form-control" asp-for="Title">
            </div>

            <div class="form-group">
                <label>İçerik</label>
                <input type="text" class="form-control" asp-for="Content">
            </div>
            <div class="form-group">
                <label>Durum</label>
                <input type="text" class="form-control" asp-for="Status">
            </div>
            <button class="btn btn-primary mr-2">Kaydet</button>

        </form>
    </div>
</div>
</div>


