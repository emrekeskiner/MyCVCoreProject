@model List<Testimonial>
@{
    ViewData["Title"] = "AdminTestimonialList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referanslar</h4>
                <div class="table-responsive">
                    <a href="/Testimonial/AddTestimonial" class="btn btn-inverse-warning"><i class="mdi mdi-file-check btn-icon-prepend"></i>Yeni Referans</a>
                    <table class="table">
                        <thead>
                            <tr>
                               
                                <th> # </th>
                                <th> Referans Adı </th>
                                <th> Firma </th>
                                <th> Yorum </th>
                                <th> Sil </th>
                                <th> Düzenle </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                  <tr>
                                <td>@item.TestimonialId</td>
                                <td>
                                    <img src="@item.ImageUrl" alt="image" />
                                    <span class="pl-2">@item.CustomerName</span>
                                </td>
                                <td>@item.Company</td>
                                <td>@item.Comment</td>
                                    <td scope="row"><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger"><i class="mdi mdi-delete btn-icon-prepend"></i> Sil</a></td>


                                    <td scope="row"><a href="/Testimonial/EditTestimonial/@item.TestimonialId" class="btn btn-outline-info"><i class="mdi mdi-pencil btn-icon-prepend"></i>Düzenle</a></td>
                            </tr>
                            }
                          
                         
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

