@model Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">İletişim Bilgileri</h4>
        <form method="post">
            @Html.HiddenFor(x => x.ContactId)
            <div class="form-group">
                <label class="form-control-label">Başlık</label>
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="form-control-label">E-Mail</label>
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="form-control-label">Telefon</label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="form-control-label">Açıklama</label>
                @Html.TextAreaFor(x => x.Description, 10, 3, new { @class = "form-control" })
            </div>
            <button class="btn btn-inverse-primary btn-fw">Düzenle</button>
        </form>

    </div>

</div>


