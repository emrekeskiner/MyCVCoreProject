@model List<EntityLayer.Concrete.Skill>
@{
    ViewData["Title"] = "SkillList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">

        <div class="card-body">
            <a href="/Skill/AddSkill" class="btn btn-inverse-warning"><i class="mdi mdi-file-check btn-icon-prepend"></i>Yeni Yetenek</a>
            <p class="card-description"></p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Oran</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td scope="row">@count</td>

                                <td scope="row">@item.Title</td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-warning" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>

                                <td scope="row"><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-outline-danger"><i class="mdi mdi-delete btn-icon-prepend"></i> Sil</a></td>


                                <td scope="row"><a href="/Skill/EditSkill/@item.SkillId" class="btn btn-outline-info"><i class="mdi mdi-pencil btn-icon-prepend"></i>Düzenle</a></td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>