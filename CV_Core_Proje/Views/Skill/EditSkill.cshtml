@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
    <form method="post">
        @Html.HiddenFor(x=>x.SkillId)
        <div class="form-group">
            <label class="form-control-label" for="skillName">Başlık</label>
            @Html.TextBoxFor(x=>x.Title,new{ @class="form-control"})
        </div>
        <div class="form-group">
            <label class="form-control-label" for="oran">Oran</label>
            @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
        </div>
            <button class="btn btn-inverse-primary btn-fw">Güncelle</button>
    </form>
    </div>
</div>

