@model List<EntityLayer.Concrete.Message>
@{
    ViewData["Title"] = "ContactMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">

        <div class="card-body">
            <h4 class="card-title">Mesajlar</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Adı Soyadı</th>
                            <th>Mail</th>
                            <th>Mesaj</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td scope="row">@count</td>

                                <td scope="row">@item.Name</td>
                                <td>@item.Mail</td>
                                <td>@item.Content</td>
                                <td>@item.Date.ToString("dd.MM.yyyy")</td>
                                <td scope="row"><a href="/Contact/DeleteContact/@item.MessageId" class="btn btn-outline-danger"><i class="mdi mdi-delete btn-icon-prepend"></i>Sil</a></td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

