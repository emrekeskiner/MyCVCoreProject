@model SocialMedia
@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Sosyal Media Ekle</h4>
        <form method="post">
            <div class="form-group">
                <label class="form-control-label">Sosyal Medya</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="form-control-label">Icon</label>
                @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label class="form-control-label">Adres</label>
                @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
            </div>
            <div class="form-check form-check-success">
                <label class="form-check-label">
                    @Html.RadioButtonFor(x => x.Status, "true" , new { @class = "form-check-input" })
                    <i class="input-helper"></i>
               Açık </label>
            </div>

            <div class="form-check form-check-danger">
                <label class="form-check-label">
                    @Html.RadioButtonFor(x => x.Status, "false" , new { @class = "form-check-input" })
                    <i class="input-helper"></i>
                Kapalı </label>
            </div>
            <button class="btn btn-inverse-primary btn-fw">Ekle</button>
        </form>

    </div>

</div>

