@model List<MyCVCore.EntityLayer.Concrete.Announcement>
@{
    ViewData["Title"] = "AdminAnnouncementList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">

        <div class="card-body">
            <h4 class="card-title">Bildirim Listesi</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Türü</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            //swich case ile statusu renklendir.
                            <tr>
                                <th>@item.AnnouncementId</th>
                                <th>@item.Title</th>
                                <td>@item.Status</td>
                                <td>@(((DateTime)item.Date).ToString("dd.MM.yyyy"))</td>
                                <td><a href="/Announcement/AdminAnnouncementDetails/@item.AnnouncementId" class="btn btn-outline-primary">Detay</a> </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


