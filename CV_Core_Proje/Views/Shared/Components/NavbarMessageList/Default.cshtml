@model List<MyCVCore.EntityLayer.Concrete.WriterMessage>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    
    @foreach (var item in Model)
    {
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item" href="/AdminMessage/AdminMessageDetails/@item.WriterMessageId">
            <div class="preview-thumbnail">
                <img src="~/Template/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/faces/face4.jpg" alt="image" class="rounded-circle profile-pic">
            </div>
            <div class="preview-item-content">
                <p class="preview-subject ellipsis mb-1">@item.Subject</p>
                <p class="text-muted mb-0"> @(((DateTime)item.Date).ToString("dd.MM.yyyy")) </p>
            </div>
        </a>
    }
    <div class="dropdown-divider"></div>
    <a class="dropdown-item preview-item" href="/AdminMessage/AdminReceiverMessage/">
    <p class="p-3 mb-0 text-center">Tüm Mesajlar</p>
    </a>
</div>